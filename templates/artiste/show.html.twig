{% extends 'admin.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}
    <h1>Artiste</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artiste.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ artiste.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artiste.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/images/' ~ artiste.image) }}" class="" alt="image" width="300px"></td>

            </tr>
            <tr>
                <th>Imagefull</th>
                <td><img src="{{ asset('uploads/images/' ~ artiste.imagefull) }}" class="" alt="image" width="300px"></td>

            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ artiste.texte }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artiste_index') }}">Retour</a>

    <a href="{{ path('artiste_edit', {'id': artiste.id}) }}">Editer</a>

    {{ include('artiste/_delete_form.html.twig') }}
{% endblock %}
