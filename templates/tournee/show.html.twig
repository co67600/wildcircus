{% extends 'admin.html.twig' %}

{% block title %}Tournee{% endblock %}

{% block body %}
    <h1>Tournee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournee.id }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ tournee.ville }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ tournee.date }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ tournee.lieu }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/images/' ~ tournee.image) }}" class="evaluation-logo" alt="logo" width="300px"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tournee_index') }}">Retour</a>

    <a href="{{ path('tournee_edit', {'id': tournee.id}) }}">Editer</a>

    {{ include('tournee/_delete_form.html.twig') }}
{% endblock %}
