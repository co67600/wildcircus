{% extends 'admin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}


<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <section class="bg-light page-section" id="artistes">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Nos artistes</h2>
                    <h3 class="section-subheading text-muted">Ils sont exceptionnels, venez les d√©couvrir</h3>
                </div>
            </div>
            <div class="row">
                {% for artiste in artiste %}
                    <div class="col-md-4 col-sm-6 portfolio-item">
                        <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{ artiste.id }}">
                            <img class="img-fluid" src="{{ asset('uploads/images/') ~ artiste.image }}" alt="">
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ artiste.nom }}</h4>
                            <p class="text-muted">{{ artiste.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>


{% endblock %}
