{% extends 'base.html.twig' %}

{% block body %}

  <!-- Header -->
  <header class="masthead">
    <div class="container">
      <div class="intro-text">
        <div class="intro-lead-in">Bienvenue au WILD CIRCUS !</div>
        <div class="intro-heading text-uppercase">Le cirque c'est la vie ! </div>
        <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#artistes">Nos artistes</a>
      </div>
    </div>
  </header>

  <!-- Concept -->
  <section class="page-section" id="concept">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Notre concept</h2>
          <h3 class="section-subheading text-muted">Les artistes au coeur du spectacle !</h3>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-4">
          <img src="{{ asset('build/images/tigre.jpg') }}" alt="tigre" class="concept_icone">
          <h4 class="service-heading">0 animaux !</h4>
          <p class="text-muted">Des cirques, du spectacle, Oui , mais les animaux sauvages, Non. <br/> Les animaux ne sont pas des clowns.</p>
        </div>
        <div class="col-md-4">
          <img src="{{ asset('build/images/concept_artiste.jpg') }}" alt="artistes" class="concept_icone">
          <h4 class="service-heading">Des artistes exceptionnels</h4>
          <p class="text-muted">Une ambiance sonore, des éclairages et des costumes époustouflants, des merveilles d’acrobatie et un grand génie théâtral.</p>
        </div>
        <div class="col-md-4">
          <img src="{{ asset('build/images/concept_tarif.jpg') }}" alt="prix" class="concept_icone">
          <h4 class="service-heading">Des tarifs pour tous</h4>
          <p class="text-muted">Nous souhaitons rendre le cirque abordable à tous avec des tarifs incroyables !</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Artiste -->
  <section class="bg-light page-section" id="artistes">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Nos artistes</h2>
          <h3 class="section-subheading text-muted">Ils sont exceptionnels, venez les découvrir</h3>
        </div>
      </div>
      <div class="row">
        {% for artiste in artiste %}
          <div class="col-md-4 col-sm-6 portfolio-item">
            <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{ artiste.id }}">
              <div class="portfolio-hover">
                <div class="portfolio-hover-content">
                  <i class="fas fa-plus fa-3x"></i>
                </div>
              </div>
              <img class="img-fluid" src="{{ asset('uploads/images/') ~ artiste.image }}" alt="">
            </a>
              <div class="portfolio-caption">
                <h4>{{ artiste.nom }}</h4>
                <p class="text-muted">{{ artiste.description }}</p>
              </div>
          </div>
        {% endfor %}
      </div>
    </div>
</section>

          <!-- Artiste Modals -->
          <!-- Modal 1 -->
  {% for artiste in artiste  %}
          <div class="portfolio-modal modal fade" id="portfolioModal{{ artiste.id }}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                  <div class="lr">
                    <div class="rl"></div>
                  </div>
                </div>
                <div class="container">
                  <div class="row">
                    <div class="col-lg-8 mx-auto">
                      <div class="modal-body">
                        <!-- Project Details Go Here -->

                        <h2 class="text-uppercase">{{ artiste.nom }}</h2>
                        <p class="item-intro text-muted">{{ artiste.description }}</p>
                        <img class="img-fluid d-block mx-auto" src="{{ asset('uploads/images/') ~ artiste.imagefull }}" alt="">
                        <p>{{ artiste.texte }}</p>


                        <button class="btn btn-primary" data-dismiss="modal" type="button">
                          <i class="fas fa-times"></i>
                          Fermer</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
  {% endfor %}


  <!-- About -->
  <section class="page-section" id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Notre histoire</h2>
          <h3 class="section-subheading text-muted">6 ans pour construire une vraie famille</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <ul class="timeline">
            <li>
              <div class="timeline-image">
                <img class="rounded-circle img-fluid" src="{{ asset('build/images/team.png') }}" alt="prix">
              </div>
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4>2020</h4>
                  <h4 class="subheading">De tournées en tournées, le WILD CIRCUS a fait des petits</h4>
                </div>
                <div class="timeline-body">
                  <p class="text-muted">Aujourd’hui nous comptons<br>
                    <i class="fas fa-check"></i> plus de 2000 artistes,<br>
                    <i class="fas fa-check"></i> 3 spécialités (développement web, analyse de la data, cybersécurité)<br>
                    <i class="fas fa-check"></i> 24 WILD CIRCUS en Europe<br>

                </div>
              </div>
            </li>


            <li class="timeline-inverted">
              <div class="timeline-image">
                <img class="rounded-circle img-fluid" src="{{ asset('build/images/anna.jpg') }}" alt="">
              </div>
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4>2014</h4>
                  <h4 class="subheading">Notre première tournée initiée par Anna Stépanoff et Romain Coeur</h4>
                </div>
                <div class="timeline-body">
                  <p class="text-muted">2014 , la première tournée du cirque WildCircus , baptisé pour la circonstance «WildCode School» se passe en France, à la Loupe, une véritable galère avec des emplacements boueux et un public rare.</p>
                </div>
              </div>
            </li>
            <li class="timeline-inverted">
              <div class="timeline-image">
                <h4>Faites partie
                  <br>de notre
                  <br>histoire !</h4>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Tournée -->
  <section class="bg-light page-section" id="tournée">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">La tournée</h2>
          <h3 class="section-subheading text-muted">Venez participer à notre spectacle</h3>
        </div>
      </div>

      <div class="row">
        {% for tournee in tournee %}
        <div class="col-sm-3">
          <div class="cardtournee">

            <div class="card-image">
              <img class="img-responsive" src="{{ asset('uploads/images/') ~ tournee.image }}" alt="">
              <span class="card-title">{{ tournee.ville }}</span>
            </div>

            <div class="card-content">
              <p>{{ tournee.date }}</p>
              <p>{{ tournee.lieu }}</p>
            </div>

            <div class="card-action">
              <a href="{{ path ('reservation_new') }}" target="new_blank" class="btn btn-primary">Réserver</a>


            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>


  <!-- Contact -->
  <section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Contact</h2>
          <h3 class="section-subheading text-muted">Pour vous tenir informé.</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <form id="contactForm" name="sentMessage" novalidate="novalidate">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <input class="form-control" id="name" type="text" placeholder="Votre nom *" required="required" data-validation-required-message="Please enter your name.">
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <input class="form-control" id="email" type="email" placeholder="Votre email *" required="required" data-validation-required-message="Please enter your email address.">
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <input class="form-control" id="phone" type="tel" placeholder="Votre n° de téléphone *" required="required" data-validation-required-message="Please enter your phone number.">
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <textarea class="form-control" id="message" placeholder="Votre message *" required="required" data-validation-required-message="Please enter a message."></textarea>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-lg-12 text-center">
                <div id="success"></div>
                <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Envoyer</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-4">
          <span class="copyright">Copyright &copy; Corinne Dallongeville Website 2019</span>
        </div>
        <div class="col-md-4">
          <ul class="list-inline social-buttons">
            <li class="list-inline-item">
              <a href="#">
                <i class="fab fa-twitter"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

{% endblock %}
